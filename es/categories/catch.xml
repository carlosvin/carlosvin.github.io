&lt;a name="rest_code_0c7f09baa09b4a038bc57afe31193eb4-2"&gt;&lt;/a&gt;
&lt;a name="rest_code_0c7f09baa09b4a038bc57afe31193eb4-3"&gt;&lt;/a&gt;&lt;span class="n"&gt;Uuid&lt;/span&gt;&lt;span class="o"&gt;::&lt;/span&gt;&lt;span class="n"&gt;Uuid&lt;/span&gt;&lt;span class="p"&gt;()&lt;/span&gt;
&lt;a name="rest_code_0c7f09baa09b4a038bc57afe31193eb4-4"&gt;&lt;/a&gt;&lt;span class="p"&gt;{&lt;/span&gt; &lt;span class="c1"&gt;// ...&lt;/span&gt;
