{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "plugins": [
        "svelte3",
        "cypress",
        "@typescript-eslint"
    ],
    "ignorePatterns": ["src/client.js", "src/server.js", "src/service-worker.js"],
    "overrides": [
        {
            "files": [
                "*.svelte"
            ],
            "processor": "svelte3/svelte3"
        }
    ],
    "extends": [
        "plugin:cypress/recommended",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser",
    "root": true
}
