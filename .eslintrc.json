{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "plugins": [
        "svelte3"
    ],
    "ignorePatterns": ["src/client.js", "src/server.js", "src/service-worker.js"],
    "overrides": [
        {
            "files": [
                "*.svelte"
            ],
            "processor": "svelte3/svelte3"
        }
    ],
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    }
}