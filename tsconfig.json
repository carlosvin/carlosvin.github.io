{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES2017",
            "WebWorker"
        ],
        "target": "es2017",
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "types": [
            "svelte",
            "@sapper",
            "node"
        ],
        "typeRoots": [
            "typings"
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "__sapper__/*",
        "static/*"
    ]
}
